#!/bin/sh
exec /usr/bin/java.orig -Xmx150m -XX:CompileThreshold=1500 -XX:NewRatio=5 -Xss2m -XX:MaxGCPauseMillis=10 -XX:MaxHeapFreeRatio=70 -XX:+RelaxAccessControlCheck -XX:+ParallelRefProcEnabled -XX:+UseBiasedLocking -XX:+UseFastAccessorMethods -XX:+UseFastEmptyMethods -XX:+UseNiagaraInstrs -XX:+UseAutoGCSelectPolicy -XX:+AggressiveOpts -XX:+BindGCTaskThreadsToCPUs -XX:+UseGCTaskAffinity -XX:+UseParallelGC -XX:LargePageSizeInBytes=64m -XX:TargetSurvivorRatio=80 -XX:MaxTenuringThreshold=60 -XX:MaxGCPauseMillis=2000 -XX:ThreadStackSize=256 -Xconcurrentio -XX:+DisableExplicitGC "$@"
